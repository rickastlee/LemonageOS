<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/customization_title" >

    <!-- Status Bar -->
    <Preference
        android:key="statusbar_category"
        android:title="@string/customization_statusbar_title"
        android:summary="@string/customization_statusbar_summary"
        android:fragment="com.android.settings.customization.fragments.StatusBar" 
        android:icon="@drawable/ic_customization_statusbar"/>

    <!-- Theming -->
    <Preference
        android:key="theming_category"
        android:title="@string/customization_theming_title"
        android:summary="@string/customization_theming_summary"
        android:fragment="com.android.settings.customization.fragments.Theming" 
        android:icon="@drawable/ic_customization_theming"/>

    <!-- System navigation -->
    <Preference
        android:key="gesture_system_navigation_input_summary"
        android:title="@string/system_navigation_title"
        android:fragment="com.android.settings.gestures.SystemNavigationGestureSettings"
        android:icon="@drawable/ic_customization_navigation"
        settings:controller="com.android.settings.gestures.SystemNavigationPreferenceController"
        settings:keywords="@string/keywords_system_navigation" />

    <!-- Gestures -->
    <Preference
        android:key="gesture_settings"
        android:title="@string/gesture_preference_title"
        android:icon="@drawable/ic_settings_gestures"
        android:fragment="com.android.settings.gestures.GestureSettings"
        settings:controller="com.android.settings.gestures.GesturesSettingPreferenceController"/>

    <!-- Miscellaneous -->
    <Preference
        android:key="miscellaneous_category"
        android:title="@string/customization_miscellaneous_title"
        android:summary="@string/customization_miscellaneous_summary"
        android:fragment="com.android.settings.customization.fragments.Miscellaneous" 
        android:icon="@drawable/ic_customization_miscellaneous"/>

</PreferenceScreen>